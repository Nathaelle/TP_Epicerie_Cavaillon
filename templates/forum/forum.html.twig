{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur nos forums!{% endblock %}

{% block body %}

{# Formulaire de cr√©ation de forum #}
<div class="jumbotron row">
    <div class="col-md-8 m-auto">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.creer, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
    </div>
</div>

<div class="row">
    <div class="col-md-8 m-auto">
        <ul class="list-group">
            {% for forum in forums %}
            <li class="list-group-item">{{ forum.titre }}</li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock %}
