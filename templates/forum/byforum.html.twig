{% extends 'base.html.twig' %}

{% block title %}{{ forum.titre }}{% endblock %}

{% block body %}

{# Formulaire de cr√©ation de forum #}
<div class="jumbotron row">
    <div class="col-md-8 m-auto">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.creer, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}
    </div>
</div> 

<div class="row">
    <div class="col-md-8 m-auto">
        <ul class="list-group">
            {% for sujet in sujets %}
            <li class="list-group-item"><a href="{{ path('sujet', {'id': sujet.id}) }}">{{ sujet.titre }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>

{% endblock %}
